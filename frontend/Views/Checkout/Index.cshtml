@model Eburgan.Frontend.Models.View.CheckoutViewModel

<div class="row">
        <h2>Sepetim</h2>
        <!-- Tag helpers https://docs.microsoft.com/en-US/aspnet/core/mvc/views/tag-helpers/intro?view=aspnetcore-5.0 -->

            <form class="form" asp-action="Purchase">
         <div class="form-group">
            <label asp-for="Name">Ad</label>
            <span class="text-danger" asp-validation-for="Name"></span>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <span class="text-danger" asp-validation-for="Email"></span>
            <input class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Address">Adres</label>
            <span class="text-danger" asp-validation-for="Address"></span>
            <input class="form-control" asp-for="Address" />
        </div>
        <div class="form-group">
            <label asp-for="Town">Şehir</label>
            <span class="text-danger" asp-validation-for="Town"></span>
            <input class="form-control" asp-for="Town" />
        </div>
        <div class="form-group">
            <label asp-for="PostalCode">Posta Kodu</label>
            <span class="text-danger" asp-validation-for="PostalCode"></span>
            <input class="form-control" asp-for="PostalCode" />        
        </div>
        <div class="form-group">
            <label asp-for="CreditCard">Kredi Kartı Numarası</label>
            <span class="text-danger" asp-validation-for="CreditCard"></span>
            <input class="form-control" asp-for="CreditCard" />
        </div>
        <div class="form-group">
            <label asp-for="CreditCardDate">Son Kullanım Tarihi</label>
            <span class="text-danger" asp-validation-for="CreditCardDate"></span>
            <input class="form-control" asp-for="CreditCardDate" />
        </div>
        <button type="submit" class="btn btn-primary ml-4 w-50">Satın AL</button>
    </form>  

</div>

