@model Eburgan.Frontend.Models.Api.Event
<div class="row mt-5">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="detailImage" alt="Artist pic" />
    </div>
    <div class="col-md-6 ml-1">
        <div class="row">
            <div class="columnHeader">Detay</div>
        </div>
        <div class="row mt-2 bold">
            <h1>@Model.Name</h1>
        </div>
        <div class="row mt-2">
            <h3>@Model.Artist</h3>
        </div>
        <div class="row mt-3 mt-4 bold">
            <h3>@Model.Date.ToShortDateString()</h3>
        </div>
        <div class="row mt-4">
            @Model.Description
        </div>
        <div class="row mt-5">
            <h3><span class="bold">@Model.Price TL</span></h3><span class="mt-1">&nbsp;&nbsp;&nbsp;</span>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col">
        <hr />
    </div>
</div>
<div class="row mt-4">
    <div class="col offset-4">
        <form class="form" asp-action="AddLine" asp-controller="ShoppingBasket">
            <div class="row">
                <label class="columnHeader mt-2">Adet:</label>
                <select name="TicketAmount" class="ml-5 w-25">
                    @for (int i = 1; i < 51; i++)
                    {
                        <option value="@i">@i</option>   
                    }
                </select>
                <input asp-for="EventId" type="hidden" />
                <input asp-for="Price" type="hidden" />
                <button type="submit" class="btn btn-primary ml-4 w-50">Sipariş Ver</button>
            </div>
        </form>
    </div>
</div>